{
  "editor.formatOnSave": false,
  "files.associations": {
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "beautify.language": {
    "html": ["django-html"]
  },
  "[django-html]": {
    // "editor.formatOnSave": true,
    "editor.defaultFormatter": "HookyQR.beautify",
    "editor.tabSize": 2
  }
}
